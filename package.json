{
  "name": "ai-chatbot-widget",
  "version": "1.0.0",
  "description": "Self-hosted AI chatbot widget with RAG knowledge base",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "seed": "node src/seed.js",
    "build:widget": "node widget/build.js",
    "build:admin": "cd admin && npm run build",
    "build": "npm run build:widget && npm run build:admin",
    "test": "vitest run tests/unit tests/integration",
    "test:e2e": "playwright test",
    "test:watch": "vitest"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^12.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "esbuild": "^0.24.2",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.77.0",
    "pdfjs-dist": "^4.9.155",
    "uuid": "^11.0.5",
    "winston": "^3.17.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "supertest": "^7.0.0",
    "vitest": "^3.0.5"
  }
}
